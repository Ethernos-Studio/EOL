// 测试 instanceof 运算符
// 版本: 0.4.1.0

public interface Drawable {
    void draw();
}

public class Shape {
    public static void draw() {
        println("Drawing Shape");
    }
}

public class Rectangle extends Shape implements Drawable {
    public static void draw() {
        println("Drawing Rectangle");
    }
}

@main
public class TestInstanceOf {
    public static void main() {
        Shape shape = new Shape();
        Rectangle rect = new Rectangle();

        // 测试 shape instanceof Shape
        if (shape instanceof Shape) {
            println("shape instanceof Shape: true");
        } else {
            println("shape instanceof Shape: false");
        }

        // 测试 rect instanceof Rectangle
        if (rect instanceof Rectangle) {
            println("rect instanceof Rectangle: true");
        } else {
            println("rect instanceof Rectangle: false");
        }

        // 测试 rect instanceof Shape（继承检查）
        if (rect instanceof Shape) {
            println("rect instanceof Shape: true");
        } else {
            println("rect instanceof Shape: false");
        }

        // 测试 rect instanceof Drawable（接口检查）
        if (rect instanceof Drawable) {
            println("rect instanceof Drawable: true");
        } else {
            println("rect instanceof Drawable: false");
        }
    }
}
